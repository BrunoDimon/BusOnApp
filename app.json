{
  "expo": {
    "name": "BusOn APP",
    "slug": "buson-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/iconBusOn.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splashBusOnApp.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true
    },
    "locales": {
      "pt-BR": {
        "name": "Português",
        "iso639": "pt",
        "iso3166": "BR"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/iconBusOn.png",
        "backgroundColor": "#000000"
      }
    },
    "web": {
      "favicon": "./assets/iconBusOn.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Permissão para que o BusOn acesse as suas fotos"
        }
      ]
    ],
  }
}